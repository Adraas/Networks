<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.wkn.controller.windowcontrollers.HtmlHandlerWindowController">
    <children>
        <MenuBar layoutX="14.0" layoutY="14.0" prefHeight="25.0" prefWidth="575.0">
            <menus>
                <Menu mnemonicParsing="false" text="Файл">
                    <items>
                        <MenuItem fx:id="menuItemExit" mnemonicParsing="false" onAction="#clickOnMenuItemExit"
                                  text="Выход"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Помощь">
                    <items>
                        <MenuItem fx:id="menuItemAbout" mnemonicParsing="false" onAction="#clickOnMenuItemAbout"
                                  text="О программе"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <GridPane layoutX="14.0" layoutY="53.0" prefHeight="126.0" prefWidth="286.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="122.0" minWidth="10.0" prefWidth="94.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="177.0" minWidth="10.0" prefWidth="177.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <TextField fx:id="textFieldURL" promptText="Только для http-соединений" GridPane.columnIndex="1"/>
                <TextField fx:id="textFieldDepth" promptText="Задумайся о скорости" GridPane.columnIndex="1"
                           GridPane.rowIndex="1"/>
                <Label text="URL:"/>
                <Label text="Глубина проверки:" GridPane.rowIndex="1"/>
                <Button fx:id="buttonPerformCheck" mnemonicParsing="false" onAction="#clickOnButtonPerformCheck"
                        prefHeight="25.0" prefWidth="177.0" text="Выполнить проверку" GridPane.columnIndex="1"
                        GridPane.rowIndex="2"/>
            </children>
        </GridPane>
        <GridPane layoutX="14.0" layoutY="190.0" prefHeight="193.0" prefWidth="286.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="97.0" minHeight="10.0" prefHeight="39.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="185.0" minHeight="10.0" prefHeight="154.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Посещенные адреса:"/>
                <ListView fx:id="listViewVisitedAddresses" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1"/>
            </children>
        </GridPane>
        <GridPane layoutX="312.0" layoutY="53.0" prefHeight="330.0" prefWidth="275.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="78.0" minHeight="0.0" prefHeight="27.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="166.0" minHeight="10.0" prefHeight="118.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="60.0" minHeight="3.0" prefHeight="31.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="167.0" minHeight="10.0" prefHeight="154.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Изображения текущего DNS:"/>
                <Label text="Изображения внешних DNS:" GridPane.rowIndex="2"/>
                <ListView fx:id="listViewCurrentDNS" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1"/>
                <ListView fx:id="listViewExternalDNS" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="3"/>
            </children>
        </GridPane>
    </children>
</AnchorPane>
